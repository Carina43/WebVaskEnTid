@page
@model WebVaskEnTid.Pages.CreateBookingModel
@{
}
<body>
    <container-sm>
        <div class="text-center">
            <h1>Opret booking</h1>
        </div>

        <div class="card shadow-sm">
            <div class="card-body text-center">
                <form method="post">
                    <div class="form-group container-fluid">
                        <input asp-for="PhoneNumber" id="newphonenumber" aria-describedby="dateTimeHelp" placeholder="Telefonnummer" />
                        <label for="inputDateTime">Dato: </label>
                        <input type="date" asp-for="BookingDate" id="BookingDate" aria-describedby="dateTimeHelp" placeholder="Enter Date/Time" step="3600">
                        <label for="inputDateTime">Starttid: </label>
                        <input type="time" asp-for="BookingTime" id="BookingTime" aria-describedby="dateTimeHelp" placeholder="Enter end time" step="3600" />
                    </div>
                    <div class="mt-2">
                        <div class="form-group mt-2 d-inline">
                            <select asp-for="MachineID" id="Maskine">
                                <option value="0">Vælg Maskine</option>
                                <option value="1">Vask1</option>
                                <option value="2">Vask2</option>
                                <option value="3">Vask3</option>
                                <option value="4">Tør1</option>
                                <option value="5">Tør2</option>
                                <option value="6">Rul1</option>
                            </select>
                        </div>
                    </div>
                   
                    <button type="submit" class="btn btn-primary mt-5">Submit</button>
                </form>
            </div>
        </div>

                </<div>
                </div>
    </container-sm>
</body>
